<% if flash[:warning] %>
    <div class="notice"><%= flash[:warning] %></div>
<% end %>

<div class="container">
  <div class="col-5">
    <div class="card p-3 m-5">
      <%= form_tag '/signin', method: 'post', :class => 'form' do  %>
        <!-- <div class="form-group">
          <%# <%= label_tag 'email', 'Email'%> %>
          <%# <%= text_field_tag :email, nil, class: 'form-control', autofocus: true %> %>
        </div> -->
        <div class="form-group">
          <%= label_tag 'user_name', 'Username'%>
          <%= text_field_tag :user_name, nil, class: 'form-control has-validation', autofocus: true %>
          <div class="invalid-feedback">
            Please choose a username.
          </div>
        </div>
        <div class="form-group">
          <%=label_tag 'password', "Password" %>
          <%= password_field_tag :password, nil, class: 'form-control'  %>
        </div>
        <%= submit_tag "Sign on up!", class: 'btn btn-default btn-lg btn-submit' %>
        <%= link_to "Cancel" , '/login', class: 'btn btn-default btn-lg'%>
      <%end%>
    </div>
  </div>
</div>
